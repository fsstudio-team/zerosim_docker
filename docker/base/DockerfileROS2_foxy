# docker.pkg.github.com/fsstudio-team/zerosimros/zerosim_ros
FROM zerosim_ros

ENV ROS2_DISTRO=foxy

##################################################################
# ROS 2 Foxy Install
##################################################################
ENV LANG C.UTF-8
ENV LC_ALL C.UTF-8

RUN apt install -y software-properties-common && rm -rf /var/lib/apt/lists/*
RUN add-apt-repository universe

RUN apt update && apt install -y curl gnupg2 lsb-release
RUN curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key  -o /usr/share/keyrings/ros-archive-keyring.gpg

RUN echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(lsb_release -cs) main" | tee /etc/apt/sources.list.d/ros2.list > /dev/null

RUN apt update
RUN DEBIAN_FRONTEND=noninteractive apt install -y ros-foxy-desktop

RUN source /opt/ros/$ROS2_DISTRO/setup.bash

RUN apt-get update
RUN apt install -y python3-pip && rm -rf /var/lib/apt/lists/*
RUN pip3 install -U argcomplete

RUN apt update
RUN apt install python3-colcon-common-extensions python3-colcon-core -y && rm -rf /var/lib/apt/lists/*
COPY ./docker/.vscode/terminals_ROS2_foxy.json /.vscode/terminals.json

##################################################################
# ROS2 Bridge Workspace
##################################################################
ENV CATKIN_WS_ROS2=/catkin_ws_ros2
RUN mkdir -p $CATKIN_WS_ROS2/src
WORKDIR $CATKIN_WS_ROS2/src

RUN git clone --progress --verbose -b foxy-devel https://github.com/ros-controls/control_msgs
COPY ./ros/ros2/bridge_with_action_bridge/ $CATKIN_WS_ROS2/src/ros1_bridge

##################################################################
# ROS2 Universal Package Workspace
##################################################################
ENV CATKIN_WS_ROS2_UR=/catkin_ws_ros2_ur
RUN mkdir -p $CATKIN_WS_ROS2_UR/src 
RUN cd $CATKIN_WS_ROS2_UR/src

COPY ./ros/ros2/trajectory_action_send_goal_test_pkg/ $CATKIN_WS_ROS2_UR/src/trajectory_action_send_goal_test_pkg
COPY ./ros/ros2/Universal_Robots_ROS2_Driver/ $CATKIN_WS_ROS2_UR/src/Universal_Robots_ROS2_Driver